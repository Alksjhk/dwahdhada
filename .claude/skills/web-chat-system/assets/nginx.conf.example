# Nginx Configuration for Web Chat System
# Copy this to /etc/nginx/sites-available/chat-system
# Then enable with: sudo ln -s /etc/nginx/sites-available/chat-system /etc/nginx/sites-enabled/

# Upstream configuration for load balancing
upstream chat_backend {
    least_conn;
    server 127.0.0.1:3001;
    # Add more servers for load balancing
    # server 127.0.0.1:3002;
    # server 127.0.0.1:3003;
}

# HTTP Server
server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;

    # Redirect to HTTPS (uncomment for production)
    # return 301 https://$server_name$request_uri;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Frontend static files
    location / {
        root /var/www/chat-system/client/dist;
        index index.html;
        try_files $uri $uri/ /index.html;

        # Security: Disable directory listing
        autoindex off;

        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
            access_log off;
        }

        # Disable cache for HTML files
        location ~* \.html$ {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
        }
    }

    # API proxy
    location /api {
        proxy_pass http://chat_backend;
        proxy_http_version 1.1;

        # Headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }

    # SSE endpoints (critical configuration - must disable buffering)
    location /api/sse {
        proxy_pass http://chat_backend;
        proxy_http_version 1.1;

        # SSE-specific headers
        proxy_set_header Connection '';
        proxy_set_header Cache-Control no-cache;
        proxy_set_header X-Accel-Buffering no;

        # Critical: Disable buffering for SSE
        proxy_buffering off;
        proxy_cache off;

        # Prevent timeout (SSE connections are long-lived)
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
        proxy_connect_timeout 60s;

        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Disable access logging for SSE (can be very verbose)
        access_log off;
    }

    # File uploads
    location /uploads {
        proxy_pass http://chat_backend;

        # Allow large files (10MB)
        client_max_body_size 10M;
        client_body_buffer_size 10M;

        # Increase timeout for uploads
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Optimize for file serving
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
    }

    # Health check endpoint (if implemented)
    location /health {
        proxy_pass http://chat_backend/api/health;
        access_log off;
    }

    # Logging
    access_log /var/log/nginx/chat-system-access.log;
    error_log /var/log/nginx/chat-system-error.log warn;
}


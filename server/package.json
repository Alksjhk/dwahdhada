{
  "name": "chat-server",
  "version": "1.1.0",
  "description": "聊天系统后端服务 - 支持合并部署",
  "main": "dist/app.js",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "build": "bun build src/app.ts --outdir dist --target node",
    "start": "bun dist/app.js",
    "merge": "cd .. && cd client && bun run build && cd ../server && bun --watch src/app.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  }
}
